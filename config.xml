    <plugin name="uk.co.workingedge.phonegap.plugin.launchnavigator" source="npm">
        <variable  name="GOOGLE_API_KEY_FOR_ANDROID" value="{AIzaSyCt6S91H9a6BbLZc8KLaIanmdAhAyYL2qI}"/>
