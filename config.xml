    <plugin name= "cordova-plugin-datepicker" source="npm" spec="0.9.3"/>
    <plugin name= "cordova-plugin-spinnerdialog" source="npm" spec="1.3.2"/>
    <plugin name= "cordova-plugin-keyboard" source="npm" spec="1.2.0"/>
    <plugin name= "cordova-plugin-openfilenative" source="npm" spec="1.1.0"/>
    <plugin name= "cordova-plugin-statusbar" source="npm" spec="2.4.3"/>
    <plugin name= "cordova-plugin-market" source="npm" spec="1.2.0"/>
    <plugin name= "cordova-plugin-nativestorage" source="npm" spec="2.3.2"/>
    <plugin name="cordova-plugin-wkwebview-file-xhr" source="npm" version="3.0.0" />
    <plugin name= "cordova-plugin-splashscreen" source="npm" spec="6.0.0"/>
    <plugin name= "cordova-plugin-splashscreen" source="npm" spec="6.0.0"/>
    <plugin name="cordova-plugin-file-transfer-latest"  source="npm" spec="2.0.2-dev" />
    <plugin name="cordova-plugin-qr-barcode-scanner" source="npm"  spec="8.0.3"/>
